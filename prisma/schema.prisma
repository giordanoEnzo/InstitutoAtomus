generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  company   String?
  position  String?
  phone     String?
  email     String
  source    String?
  ip        String?
  createdAt DateTime @default(now())
}

model Page {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  content   String
  updatedAt DateTime @updatedAt
}

model News {
  id          Int       @id @default(autoincrement())
  title       String
  subtitle    String?
  content     String
  imageUrl    String?
  author      String?
  metaDesc    String?
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Ebook {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  coverUrl    String?
  fileUrl     String
  createdAt   DateTime @default(now())
}

model AnalyticsEvent {
  id        Int      @id @default(autoincrement())
  eventType String   // e.g. "pageview", "click", "time_on_page"
  path      String
  elementId String?
  source    String?
  device    String?
  sessionId String
  duration  Int?     // For time_on_page in seconds
  createdAt DateTime @default(now())
}
